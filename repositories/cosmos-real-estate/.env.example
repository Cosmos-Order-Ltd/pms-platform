# COSMOS ORDER REAL ESTATE PLATFORM - ENVIRONMENT CONFIGURATION
# Container #43 - Real Estate Development Platform

# Server Configuration
NODE_ENV=production
PORT=3030
JWT_SECRET=your-super-secure-jwt-secret-for-real-estate-platform-128-chars-minimum
ENCRYPTION_KEY=your-32-character-encryption-key-here
ADMIN_PASSWORD=your-admin-dashboard-password

# Database Configuration
DATABASE_URL=postgresql://postgres:password@192.168.30.98:5432/real_estate_db
POSTGRES_PASSWORD=secure-postgres-password-here
REDIS_URL=redis://192.168.30.98:6379
REDIS_PASSWORD=secure-redis-password-here
REDIS_PREFIX=real_estate

# Cyprus Government APIs
CYPRUS_TOWN_PLANNING_API=https://api.townplanning.gov.cy
CYPRUS_ENVIRONMENT_API=https://api.environment.gov.cy
CYPRUS_LAND_REGISTRY_API=https://api.landregistry.gov.cy
CYPRUS_VAT_API=https://api.mof.gov.cy/vat
CYPRUS_MUNICIPAL_API=https://api.municipal.gov.cy

# Email Services
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@cosmosorder.com

# SMS Services
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_FROM_NUMBER=+357xxxxxxxx

# File Storage (AWS S3)
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_S3_BUCKET=cosmos-real-estate-documents
AWS_REGION=eu-west-1

# Payment Processing
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# Geolocation Services
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Monitoring and Error Tracking
SENTRY_DSN=your-sentry-dsn-for-error-tracking
GRAFANA_PASSWORD=your-grafana-admin-password

# Security Configuration
BCRYPT_ROUNDS=12
JWT_EXPIRY=7d
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=52428800
UPLOAD_PATH=./uploads

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/real-estate-platform.log

# Cyprus Business Configuration
DEFAULT_COUNTRY_CODE=CY
DEFAULT_TIMEZONE=Europe/Nicosia
DEFAULT_CURRENCY=EUR

# Project Configuration
DEFAULT_PROJECT_DURATION=24
DEFAULT_CONTINGENCY_PERCENTAGE=15
DEFAULT_MARKETING_BUDGET_PERCENTAGE=5

# Compliance Configuration
COMPLIANCE_CHECK_INTERVAL=86400000
PERMIT_EXPIRY_WARNING_DAYS=30
VIOLATION_CHECK_ENABLED=true

# Market Analysis Configuration
MARKET_DATA_UPDATE_INTERVAL=3600000
COMPETITOR_ANALYSIS_ENABLED=true
PRICE_ELASTICITY_CALCULATION=true

# Construction Management
CONSTRUCTION_PROGRESS_UPDATE_INTERVAL=60000
QUALITY_CHECK_FREQUENCY=weekly
SAFETY_INSPECTION_FREQUENCY=daily

# Investor Relations
INVESTOR_REPORT_FREQUENCY=monthly
DISTRIBUTION_CALCULATION_DAY=1
PERFORMANCE_TRACKING_ENABLED=true

# Sales & Marketing
LEAD_SCORING_ENABLED=true
AUTOMATED_FOLLOW_UP_ENABLED=true
CONVERSION_TRACKING_ENABLED=true

# Business Hours (Cyprus time)
BUSINESS_HOURS_START=09:00
BUSINESS_HOURS_END=18:00
BUSINESS_DAYS=1,2,3,4,5

# Invitation System Integration
INVITATION_SERIES=CYR
INVITATION_PREFIX=CYR
MAX_INVITATIONS=50

# Cyprus Market Bounds
CYPRUS_BOUNDS_NORTH=35.7011
CYPRUS_BOUNDS_SOUTH=34.5588
CYPRUS_BOUNDS_EAST=34.6049
CYPRUS_BOUNDS_WEST=32.2567

# Real Estate Specific
MINIMUM_PLOT_SIZE=1000
MAXIMUM_BUILDING_HEIGHT=50
DEFAULT_BUILDING_COEFFICIENT=0.8
DEFAULT_COVERAGE_RATIO=0.5

# Financial Configuration
BASE_CURRENCY=EUR
EXCHANGE_RATE_UPDATE_INTERVAL=3600000
TAX_CALCULATION_ENABLED=true
CAPITAL_GAINS_TAX_RATE=20

# Utilities Integration
EAC_API_ENDPOINT=https://api.eac.com.cy
WATER_BOARD_API_ENDPOINT=https://api.waterboard.gov.cy
CYTA_API_ENDPOINT=https://api.cyta.com.cy

# Development Tools
SWAGGER_ENABLED=true
API_DOCUMENTATION_PATH=/api-docs
HEALTH_CHECK_ENDPOINT=/health

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=30
BACKUP_DESTINATION=s3