# Cyprus Access Control (CAC) Environment Configuration
# Geofenced Invitation Orchestration Service

# Server Configuration
NODE_ENV=development
PORT=3019
ADMIN_PORT=3020
JWT_SECRET=your-super-secure-jwt-secret-for-invitation-system
ENCRYPTION_KEY=your-32-character-encryption-key-here
ADMIN_PASSWORD=your-admin-dashboard-password

# Database Configuration
DATABASE_URL=postgresql://postgres:password@192.168.30.98:5432/invitations
REDIS_URL=redis://192.168.30.98:6379
REDIS_PREFIX=cac

# Courier Integration APIs
DHL_API_KEY=your-dhl-api-key
DHL_ACCOUNT_NUMBER=your-dhl-account-number
DHL_WEBHOOK_SECRET=your-dhl-webhook-secret

UPS_API_KEY=your-ups-api-key
UPS_CLIENT_ID=your-ups-client-id
UPS_CLIENT_SECRET=your-ups-client-secret
UPS_WEBHOOK_SECRET=your-ups-webhook-secret

FEDEX_API_KEY=your-fedex-api-key
FEDEX_SECRET_KEY=your-fedex-secret-key
FEDEX_WEBHOOK_SECRET=your-fedex-webhook-secret

# SMS and Communication
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_FROM_NUMBER=+357xxxxxxxx
TWILIO_VERIFY_SERVICE_SID=your-twilio-verify-service-sid

# Geolocation Services
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
IPSTACK_API_KEY=your-ipstack-api-key
OPENCAGE_API_KEY=your-opencage-geocoding-api-key

# Cyprus Business Registry (when available)
CYPRUS_REGISTRY_API_KEY=your-cyprus-registry-api-key
CYPRUS_REGISTRY_ENDPOINT=https://api.companies.gov.cy

# Email Services (for notifications)
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=invitations@cypruspms.com

# Security Configuration
BCRYPT_ROUNDS=12
JWT_EXPIRY=7d
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Webhook Security
WEBHOOK_SECRET_TOKEN=your-webhook-secret-token

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/invitation-engine.log

# Cyprus Business Configuration
DEFAULT_COUNTRY_CODE=CY
DEFAULT_TIMEZONE=Europe/Nicosia
DEFAULT_CURRENCY=EUR

# Trial Configuration
DEFAULT_TRIAL_DAYS=14
TRIAL_WARNING_DAYS=3
COUNTDOWN_UPDATE_INTERVAL=60000

# Geofencing Configuration
DEFAULT_ACTIVATION_RADIUS=100
MAX_ACTIVATION_RADIUS=1000
MIN_ACTIVATION_RADIUS=50
LOCATION_VERIFICATION_TIMEOUT=30000

# Anti-Spoofing Configuration
VPN_DETECTION_ENABLED=true
GPS_SPOOFING_DETECTION_ENABLED=true
DEVICE_FINGERPRINTING_ENABLED=true

# Invitation Generation
INVITATION_PREFIX_HOTEL=CYH
INVITATION_PREFIX_REAL_ESTATE=CYR
INVITATION_PREFIX_COMPANY=CYC
QR_CODE_SIZE=256
QR_CODE_ERROR_CORRECTION=M

# Cyprus Market Configuration
CYPRUS_BOUNDS_NORTH=35.7011
CYPRUS_BOUNDS_SOUTH=34.5588
CYPRUS_BOUNDS_EAST=34.6049
CYPRUS_BOUNDS_WEST=32.2567

# Business Hours (Cyprus time)
BUSINESS_HOURS_START=09:00
BUSINESS_HOURS_END=18:00
BUSINESS_DAYS=1,2,3,4,5

# Monitoring and Analytics
ANALYTICS_ENABLED=true
REAL_TIME_TRACKING=true
PERFORMANCE_MONITORING=true