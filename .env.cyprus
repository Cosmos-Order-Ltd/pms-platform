# Cyprus-specific environment configuration for PMS Platform
# This file contains Cyprus market-specific settings and should be used
# in addition to the standard .env configuration

# ================================
# CYPRUS LOCALIZATION
# ================================

# Primary settings for Cyprus market
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=el,en,he,ru
DEFAULT_CURRENCY=EUR
SUPPORTED_CURRENCIES=EUR,GBP,USD,ILS
TZ=Asia/Nicosia

# Date and time formats (Cyprus standard)
DATE_FORMAT=DD/MM/YYYY
TIME_FORMAT=HH:mm
DATETIME_FORMAT=DD/MM/YYYY HH:mm

# ================================
# CYPRUS VAT CONFIGURATION
# ================================

# Cyprus VAT rate for accommodation (9%)
CYPRUS_VAT_RATE=0.09
VAT_REPORTING_ENABLED=true
VAT_REPORTING_FREQUENCY=quarterly

# Tax For All (TFA) system integration
TFA_API_URL=https://www.tfa.mof.gov.cy/api
# TFA_API_KEY=your_tfa_api_key_here  # Set in production

# ================================
# JCC PAYMENT GATEWAY
# ================================

# JCC (Bank of Cyprus) payment gateway
JCC_ENABLED=true
JCC_API_URL=https://api.jcc.com.cy/v2
JCC_SUPPORTED_CURRENCIES=EUR,GBP,USD,ILS
JCC_3DS_REQUIRED=true
JCC_SETTLEMENT_DELAY_HOURS=24

# JCC Credentials (set in production)
# JCC_MERCHANT_ID=your_jcc_merchant_id
# JCC_API_KEY=your_jcc_api_key

# ================================
# CYPRUS POLICE REGISTRATION
# ================================

# Guest registration with Cyprus Police
POLICE_REGISTRATION_ENABLED=true
POLICE_REGISTRATION_DEADLINE_HOURS=24
POLICE_REGISTRATION_REQUIRED_NON_RESIDENTS=true
POLICE_REGISTRATION_REQUIRED_LONG_STAYS_DAYS=3

# Cyprus Police system integration
CYPRUS_POLICE_API=https://police.gov.cy/api
# CYPRUS_POLICE_API_KEY=your_police_api_key  # Set in production

# ================================
# SMS PROVIDERS (CYPRUS)
# ================================

# SMS configuration
SMS_ENABLED=true
SMS_DEFAULT_PROVIDER=PRIMETEL
SMS_MAX_LENGTH=160
SMS_RETRY_ATTEMPTS=3
SMS_RETRY_DELAY_SECONDS=30

# PrimeTel (Primary provider)
PRIMETEL_API_URL=https://api.primetel.com.cy/sms/v1
PRIMETEL_SENDER_ID=PMS
PRIMETEL_COST_PER_SMS=0.024
# PRIMETEL_API_KEY=your_primetel_key  # Set in production

# MTN Cyprus (Fallback provider)
MTN_API_URL=https://api.mtn.com.cy/sms/v1
MTN_SENDER_ID=PMS
MTN_COST_PER_SMS=0.025
# MTN_API_KEY=your_mtn_key  # Set in production

# ================================
# CYPRUS BUSINESS RULES
# ================================

# Business hours (Cyprus timezone)
BUSINESS_HOURS_START=09:00
BUSINESS_HOURS_END=17:00
BUSINESS_DAYS=monday,tuesday,wednesday,thursday,friday

# Compliance thresholds
COMPLIANCE_SCORE_EXCELLENT=95
COMPLIANCE_SCORE_GOOD=85
COMPLIANCE_SCORE_NEEDS_IMPROVEMENT=70

# Alert thresholds
ALERT_OVERDUE_REGISTRATIONS=5
ALERT_FAILED_PAYMENTS_PERCENT=10
ALERT_PENDING_VAT_REPORTS=1

# ================================
# CYPRUS EXTERNAL SERVICES
# ================================

# Cyprus-specific external integrations
CYPRUS_WEATHER_API=https://api.met.gov.cy
CYPRUS_MAPS_API=https://maps.cyprus.gov.cy
CYPRUS_POSTAL_API=https://postal.cyprus.gov.cy

# Channel managers popular in Cyprus
BOOKCYPRUS_ENABLED=true
BOOKING_COM_CYPRUS_ENABLED=true
EXPEDIA_CYPRUS_ENABLED=true

# ================================
# FEATURE FLAGS
# ================================

# Cyprus-specific feature toggles
CYPRUS_FEATURES_ENABLED=true
HEBREW_RTL_SUPPORT=true
GREEK_LOCALIZATION=true
RUSSIAN_LOCALIZATION=true
MULTI_CURRENCY_DISPLAY=true
CYPRUS_TAX_CALCULATIONS=true
POLICE_AUTO_REGISTRATION=true
JCC_PAYMENT_GATEWAY=true
SMS_NOTIFICATIONS=true

# ================================
# DEVELOPMENT/TESTING
# ================================

# Use mock services for development
USE_MOCK_JCC_API=false
USE_MOCK_POLICE_API=false
USE_MOCK_SMS_API=false
USE_MOCK_TFA_API=false

# Cyprus testing configuration
CYPRUS_TEST_MODE=false
CYPRUS_SANDBOX_MODE=false

# ================================
# MONITORING & LOGGING
# ================================

# Cyprus-specific monitoring
CYPRUS_MONITORING_ENABLED=true
CYPRUS_COMPLIANCE_MONITORING=true
CYPRUS_PERFORMANCE_TRACKING=true

# Log levels for Cyprus modules
CYPRUS_LOG_LEVEL=info
VAT_LOG_LEVEL=info
POLICE_LOG_LEVEL=info
JCC_LOG_LEVEL=info
SMS_LOG_LEVEL=info