# Database
DATABASE_URL="sqlite:./dev.db"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-here-change-in-production"

# Server Configuration
PORT=5000
NODE_ENV=development

# CORS Origins (comma-separated)
CORS_ORIGINS="http://localhost:3000,http://localhost:3001,http://localhost:3002"

# Email Configuration (for password reset, notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# ================================
# CYPRUS-SPECIFIC CONFIGURATION
# ================================

# JCC Payment Gateway
JCC_MERCHANT_ID=your_jcc_merchant_id
JCC_API_KEY=your_jcc_api_key
JCC_API_URL=https://api.jcc.com.cy/v2

# Cyprus VAT Configuration
CYPRUS_VAT_RATE=0.09
TFA_API_URL=https://www.tfa.mof.gov.cy/api
TFA_API_KEY=your_tfa_api_key

# Cyprus Police Registration
CYPRUS_POLICE_API=https://police.gov.cy/api
CYPRUS_POLICE_API_KEY=your_police_api_key

# SMS Providers (Cyprus)
PRIMETEL_API_URL=https://api.primetel.com.cy/sms/v1
PRIMETEL_API_KEY=your_primetel_api_key
PRIMETEL_SENDER_ID=PMS

MTN_API_URL=https://api.mtn.com.cy/sms/v1
MTN_API_KEY=your_mtn_api_key
MTN_SENDER_ID=PMS

# Cyprus Localization
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=el,en,he,ru
DEFAULT_CURRENCY=EUR
SUPPORTED_CURRENCIES=EUR,GBP,USD,ILS
TZ=Asia/Nicosia

# Frontend URLs (for redirects and callbacks)
FRONTEND_URL=http://localhost:3010
API_URL=http://localhost:5000