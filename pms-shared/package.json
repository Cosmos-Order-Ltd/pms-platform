{
  "name": "@pms/shared",
  "version": "1.0.0",
  "description": "Shared types and utilities for PMS platform",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "npm run clean && tsc",
    "dev": "tsc --watch",
    "clean": "rimraf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "prepublishOnly": "npm run build",
    "docker:build": "docker build -t localhost:5000/pms-shared:latest .",
    "docker:push": "docker push localhost:5000/pms-shared:latest"
  },
  "keywords": [
    "pms",
    "shared",
    "types",
    "utilities",
    "typescript",
    "property-management"
  ],
  "author": "PMS Team",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourorg/pms-shared.git"
  },
  "bugs": {
    "url": "https://github.com/yourorg/pms-shared/issues"
  },
  "homepage": "https://github.com/yourorg/pms-shared#readme",
  "devDependencies": {
    "@types/jest": "^29.5.3",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "eslint": "^8.47.0",
    "jest": "^29.6.2",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.8.3"
  },
  "files": [
    "dist/**/*",
    "README.md"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}